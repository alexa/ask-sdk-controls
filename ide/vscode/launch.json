    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run tests (INFO)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                
                // TODO.

                // Slow startup
                "-r",
                "ts-node/register",
                "${workspaceFolder}/test/**/*.spec.ts",
                
                // Demo test cases
                "${workspaceFolder}/demo/**/test/**/*.spec.ts"
                
                    
                // Fast startup.
                // "--require",
                // "source-map-support/register",
                // "${workspaceFolder}/dist/test/**/*.spec.js"
            ],
            "env": {
                // "DEBUG": "error:*, warn:*, info:*"  // uncomment for logs
                // "ASK_SDK_CONTROLS_LOG_RESPONSE_FILEPATH": <file_path> // uncomment to write out response for debugging
            },
            // "smartStep": true,
            "skipFiles": [
                "node_modules/**",
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",

        }
    ]
}